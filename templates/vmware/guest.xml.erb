<domain type='vmware'>
  <name><%= name %></name>
  <%- if uuid -%>
  <uuid><%= uuid %></uuid>
  <%- end -%>
  <memory><%= memory %></memory>
  <currentMemory><%= memory %></currentMemory>
  <vcpu><%= vcpu %></vcpu>
  <os>
    <type arch='<%= arch %>'>hvm</type>
    <boot dev='network'/>
    <%- if volume -%>
    <boot dev='hd'/>
    <%- end -%>
  </os>
  <clock offset='utc'/>
  <devices>
    <%- if volume -%>
    <disk type='file' device='disk'>
      <source file='<%= volume.path %>'/>
      <target dev='sda' bus='scsi'/>
      <address type='drive' controller='0' bus='0' unit='0'/>
    </disk>
    <%- end -%>
    <controller type='scsi' index='0' model='lsilogic'/>
    <%- if interface -%>
    <interface type='<%= interface.type %>'>
      <%- if interface.mac -%>
      <mac address='<%= interface.mac %>'/>
      <%- else -%>
      <!-- ESX disregards the libvirt generated mac address -->
      <!--<mac addressType='static' address='00:00:00:00:00:00'/> --> 
      <%- end -%>
      <source <%= interface.type %>='<%= interface.device %>'/>
      <model type='<%= interface.model %>'/>
    </interface>
    <%- end -%>
    <graphics type='vnc' port='-1' autoport='yes'>
    </graphics>
    <video>
      <model type='vmvga' vram='32768'/>
    </video>
  </devices>
</domain>
