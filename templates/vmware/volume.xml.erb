<volume>
  <name><%= to_s %></name>
  <allocation unit="G"><%= allocated_size %></allocation>
  <capacity unit="G"><%= size %></capacity>
  <target>
    <path><%= path %></path>
    <format type='vmdk'/>
    <permissions>
      <mode>00</mode>
      <owner>0</owner>
      <group>0</group>
    </permissions>
  </target>
</volume>
